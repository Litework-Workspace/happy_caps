<div class="content product {% render 'content-classes', scope: section %}" data-section-id="{{ section.id }}" data-section-type="product">
  <div class="item">
    <div class="right" style="float: none; width: 100%;">
      <div class="inner with-layout-options centered">
        {% render 'product-blocks' %}
      </div>
    </div>
  </div>
</div>

